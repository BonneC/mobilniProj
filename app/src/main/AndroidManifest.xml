<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bonnana.tusky">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_ver1"
        android:label="@string/app_name"
        android:logo="@drawable/logo_ver1"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">

        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Tusky">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopicTasksActivity"
            android:label="Topic Task List"></activity>
        <activity
            android:name=".TaskActivity"
            android:label="My Task" />
        <activity
            android:name=".TopicTaskActivity"
            android:label="Task Preview" />
    </application>

</manifest>